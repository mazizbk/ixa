{% if value is defined %}
    {% if tooltip is defined %}
        <button type="button" class="Btn Btn--small pull-right" data-toggle="tooltip" data-placement="bottom" title="{{ tooltip|raw }}">?</button>
    {% endif %}
    {% if title is defined %}
    <h2 class="Title Title--3">{{ title|raw }}</h2>
    {% endif %}
    {% if subtitle is defined %}
        <p>{{ subtitle|raw }}</p>
    {% endif %}
    <div class="circularChart-wrapper">
        <div class="single-chart">
            {% if reverseColor is defined and reverseColor %}
                {% set color = ixa_progress_color((10-value)/10) %}
            {% else %}
                {% set color = ixa_progress_color(value/10) %}
            {% endif %}
            <svg viewBox="0 0 36 36" class="circular-chart {{ color }}">
                <path class="circle-bg"
                      d="M18 2.0845
                                              a 15.9155 15.9155 0 0 1 0 31.831
                                              a 15.9155 15.9155 0 0 1 0 -31.831"
                />
                <path class="circle"
                      stroke-dasharray="{{ (value * 10) }}, 100"
                      d="M18 2.0845
                                              a 15.9155 15.9155 0 0 1 0 31.831
                                              a 15.9155 15.9155 0 0 1 0 -31.831"
                />
                <text x="18" y="20.35" class="percentage">{{ value}} /10</text>
            </svg>
        </div>
    </div>
{% endif %}
