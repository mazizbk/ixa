<section>
    <h2>{{ cmsFile.title }}</h2>

    {% if cmsFile.mainAttachment != null %}
        {% include 'CmsFileLayout/media_attachment.html.twig' with {
            'attachment': cmsFile.mainAttachment,
            'width': '250px',
            'height': '140px',
            'class': 'img-thumbnail pull-left'
        } %}
    {% endif %}

    <h2>{{ cmsFile.eventStartDatetime|localizeddate('full')|capitalize }}</h2>

    <p>{{ cmsFile.abstract|limit_length(100) }}</p>

    <a href="{{ cmsFilePath }}">{{ 'read.more'|trans }}</a>

    <div class="clearfix"></div>
</section>
