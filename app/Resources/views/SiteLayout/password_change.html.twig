{% extends siteLayout %}

{% block body %}
    {% if passwordReseted %}
        <p>{{ 'your.password.has.been.reseted'|trans }}</p>
    {% else %}
        {{ form_start(form, { 'attr': { 'action': path('azimut_frontofficesecurity_change_password') } } ) }}
            {{ form_widget(form) }}
            <div class="form-group">
                <button type="submit" class="btn-default btn">{{ 'set.password'|trans }}</button>
            </div>
        {{ form_end(form) }}
    {% endif %}
{% endblock %}
