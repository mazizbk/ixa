{% extends siteLayout %}

{% block body %}
    <a href="{{ path('azimut_shop_user_order_index') }}">{{ 'your.orders'|trans }}</a>
    <h1>{{ 'order'|trans }} {{ order.number }}</h1>
    <b>{{ 'order.date'|trans }} :</b>  {{ order.orderDate|date('d/m/Y') }}<br />
    <b>{{ 'status'|trans }} :</b>  {{ orderStatuses[order.status] }}<br />
    <br />
    <div class="row">
        <div class="col-md-6">
            <div class="well">
                <b>{{ 'billing.address'|trans }}</b><br /><br />
                <p>
                    {{ order.billingAddress.firstName }} {{ order.billingAddress.lastName }}<br />
                    {{ order.billingAddress.line1 }}<br />
                    <span ng-if="null != order.billingAddress.line2">{{ order.billingAddress.line2 }}<br /></span>
                    {{ order.billingAddress.postalCode }} {{ order.billingAddress.city }}<br />
                    {{ order.billingAddress.country }}
                </p>
            </div>
        </div>
        <div class="col-md-6">
            <div class="well">
                <b>{{ 'delivery.address'|trans }}</b><br /><br />
                <p>
                    {{ order.deliveryAddress.firstName }} {{ order.deliveryAddress.lastName }}<br />
                    {{ order.deliveryAddress.line1 }}<br />
                    <span ng-if="order.deliveryAddress.line2">{{ order.deliveryAddress.line2 }}<br /></span>
                    {{ order.deliveryAddress.postalCode }} {{ order.deliveryAddress.city }}<br />
                    {{ order.deliveryAddress.country }}
                </p>
            </div>
        </div>
    </div>

    {% include 'SiteLayout/shop_order_products_list.html.twig' with {
        containerClass: 'table-responsive table-bordered',
        tableClass: 'table table-striped table-hover',
    } %}
{% endblock %}
