{% set _bodyClass = 'interior' %}
{% extends siteLayout %}

{% block body %}
    <div class="MainBody-content text-center">
        {% if emailSent %}
            <p>{{ 'password.reset.email.sent'|trans }}</p>
        {% else %}

            {% form_theme form 'bootstrap_3_layout.html.twig' %}
            {{ form_start(form, { 'attr': { class : 'Form--classic Form--column', action: path('azimut_frontofficesecurity_lost_password') } } ) }}
            {{ form_widget(form) }}
            <div class="form-group">
                <br>
                <button type="submit" class="Btn">{{ 'send'|trans }}</button>
            </div>
            {{ form_end(form) }}
            </div>
        {% endif %}
    </div>
{% endblock %}
