{% extends siteLayout %}

{% block body %}
    <h1>{{ 'your.orders'|trans }}</h1>

    <div class="table-responsive">
        <table class="table table-striped table-hover" ng-if="orders.length > 0">
            <thead>
                <tr>
                    <th>
                        {{ 'number'|trans|capitalize }}
                    </th>
                    <th>
                        {{ 'status'|trans|capitalize }}
                    </th>
                    <th>
                        {{ 'order.date'|trans|capitalize }}
                    </th>
                    <th>
                        {{ 'total.amount'|trans|capitalize }} {{ 'incl.vat'|trans }}
                    </th>
                </tr>
            </thead>
            <tbody>
                {% for order in orders %}
                    <tr>
                        <td>
                            <a href="{{ path('azimut_shop_user_order_show', {'orderNumber': order.number}) }}">
                                {{ order.number }}
                            </a>
                        </td>
                        <td>
                            {{ orderStatuses[order.status] }}
                        </td>
                        <td>
                            {{ order.orderDate|date('d/m/Y') }}
                        </td>
                        <td>
                            {{ order.totalAmount|az_shop_price }}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
