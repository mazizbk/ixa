{% extends siteLayout %}

{% block body %}
    {% if form.vars.submitted and form.vars.valid %}
        <p>{{ 'your.user.account.has.been.created'|trans }}</p>
        {% if user.isActive %}
            {% block login_link %}
                <a href="{{ path('azimut_frontofficesecurity_login') }}">{{ 'login'|trans }}</a>
            {% endblock %}
        {% else %}
            <p>{{ 'your.account.will.be.activated.after.validation'|trans }}</p>
        {% endif %}
    {% else %}
        {{ form_start(form, { 'attr': { 'action': path(registerPath|default('azimut_frontofficesecurity_register')) }}) }}
            {{ form_widget(form) }}
            <div class="form-group">
                <button type="submit" class="btn-default btn">{{ 'register'|trans }}</button>
            </div>
        {{ form_end(form) }}
    {% endif %}
{% endblock %}
