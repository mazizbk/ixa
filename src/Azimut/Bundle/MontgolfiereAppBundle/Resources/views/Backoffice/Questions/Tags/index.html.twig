{% set hasCollapsableTopPanel = false %}
{% set hasFooterPanel = false %}
{% extends "@AzimutMontgolfiereApp/Backoffice/base.html.twig" %}
{% block header %}
    <div class="left"><h3>{{ 'montgolfiere.backoffice.questions.tags.header'|trans }}</h3></div>
    <div class="right">
        <a href="{{ path('azimut_montgolfiere_app_backoffice_questions_tags_create') }}">
            <i class="glyphicon glyphicon-plus"></i> {{ "montgolfiere.backoffice.questions.tags.new_tag"|trans }}
        </a>
        <a href="{{ path('azimut_montgolfiere_app_backoffice_questions_homepage') }}">
            <i class="glyphicon glyphicon-arrow-left"></i> {{ "montgolfiere.backoffice.questions.tags.back_to_questions"|trans }}
        </a>
    </div>
{% endblock %}

{% block body %}
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>{{ 'montgolfiere.backoffice.questions.tags.fields.name'|trans }}</th>
                <th class="icon-column"></th>
            </tr>
            </thead>
            <tbody>
            {% for tag in tags %}
                {# @var tag \Azimut\Bundle\MontgolfiereAppBundle\Entity\QuestionTag #}
                <tr>
                    <td><span class="label" style="background-color: #{{ tag.color }}">{{ tag.name }}</span></td>
                    <td class="icon-column">
                        {{ form(deleteForms[tag.id]) }}
                        <a href="{{ path('azimut_montgolfiere_app_backoffice_questions_tags_update', {id: tag.id}) }}"><i class="glyphicon glyphicon-pencil"></i></a>&nbsp;
                        <a href="#" onclick="confirm('{{ 'montgolfiere.backoffice.questions.tags.confirmation.tag_delete'|trans({'%name%':tag.name})|e('js') }}') && $(this).siblings('form').submit(); return false;"><i class="glyphicon glyphicon-trash"></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
