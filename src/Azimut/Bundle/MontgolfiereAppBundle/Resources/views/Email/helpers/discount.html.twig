<table class="discount" align="center" width="100%" cellpadding="0" cellspacing="0" role="presentation">
    <tr>
        <td align="center">
            <h1 class="f-fallback discount_heading">{{ title }}</h1>
            <p class="f-fallback discount_body">{{ text|default('') }}</p>
            <table width="100%" border="0" cellspacing="0" cellpadding="0" role="presentation">
                <tr>
                    <td align="center">
                        <a href="{{ action }}" class="f-fallback button button--{{ color|default('blue') }}" target="_blank">{{ button_text }}</a>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
</table>
