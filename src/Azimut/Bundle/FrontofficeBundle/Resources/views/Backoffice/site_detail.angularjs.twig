{% verbatim %}
    <header class="header-bar">
        <az-breadcrumb class="left shrink2" breadcrumb="breadcrumb" current-element="site" open-function="openBreadcrumbElement"></az-breadcrumb>
    </header>

    <section class="horizontal-panel collapsable-panel has-labelled-btn scrollable-container grow1" az-collapsable-panel="sitePanelParams">
        <div class="scrollable">
            <div class="margin-block">
                <div class="text-right">
                    <az-form-locale-selector ng-model="formLocale"></az-form-locale-selector>
                </div>

                <div ng-include="formSiteTemplateUrl"></div>
            </div>
        </div>
        <a href class="collapsable-border-btn collapsable-border-btn-bottom">
            <span><span class="glyphicon glyphicon-cog"></span> {% endverbatim %}{{ 'site.parameters'|trans|capitalize }}{% verbatim %} <span class="caret"></span></span>
        </a>
    </section>

    <section class="body scrollable-container">
        <div class="scrollable">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th class="icon-column"></th>
                            <th>
                                {% endverbatim %}{{ 'title'|trans|capitalize }}{% verbatim %}
                            </th>
                            <th>
                                {% endverbatim %}{{ 'pages'|trans|capitalize }}{% verbatim %}
                            </th>
                            <th class="icon-column"></th>
                        </tr>
                    </thead>

                    <tbody>
                        <tr
                            ng-repeat="menu in site.menus"
                        >
                            <td class="icon-column">
                                <span class="glyphicon glyphicon-align-justify"></span>
                            </td>
                            <td>
                                <a href ng-click="openMenu(menu)">{{ menu.name }}</a>
                            </td>
                            <td>
                                {{ menu.pages.length }}
                            </td>
                            <td class="icon-column">

                            </td>
                        </tr>
                    </tbody>

                </table>
            </div>
        </div>
    </section>

    <footer class="footer-bar footer-bar-sm">
        <div class="right">
            <a href ng-click="openSitePreview(site)"><span class="glyphicon glyphicon-eye-open"></span> {% endverbatim %}{{ 'site.preview'|trans|capitalize }}{% verbatim %}</a>
        </div>
    </footer>
{% endverbatim %}
